<body>
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-body">
                    <h3>Bienvenido {{nombre}}</h3>
              
                    <h4>Elegi una opcion del Menu</h4>
                    <!-- <a href="/links" class="btn btn-primary m-4">
                        Save your Links    
                    </a>
                    -->
                     <input type="text" id="dni" name="dni" placeholder="" value="{{userid}}" readonly></input>
                     <input type="text" id="nombreusuario" name="nombreusuario" placeholder="" value="{{nombre}}" readonly></input>
                     <input type="text" id="token" name="token" placeholder="" value="{{token}}" readonly></input>
                     
                </div>
            </div>
        </div>

    </div>
</div>

<script type="text/javascript">
console.log("entre en profile")
    console.log("dni", document.getElementById('dni').value)
    console.log("nombre", document.getElementById('nombreusuario').value)
    console.log("token", document.getElementById('token').value)
 
   setTimeout(() => {
    console.log("Tarea ejecutada tras 3 segundos");
  }, 3000);
  
  // Este código se ejecuta en el navegador del cliente
 const mtoken = document.getElementById('token').value;
  
  if (mtoken) {
    console.log("graba sesion")
    localStorage.setItem('token_acceso', mtoken);
    localStorage.setItem("nombre", document.getElementById('nombreusuario').value);
    console.log('Token guardado correctamente');
  }
else {
    console.log('No se recibió ningún token');
  }
   window.location.href = '/'; 
  
</script>
