              {{/if}}
              <input id="foto_{{id_producto}}" value="{{foto2}}" hidden=true></input>

            </td>
            <td>
                <BR>Imagen nueva</BR>
            </td>
          </tr>
          <tr  style="align:left;">
            <td style="align-items: left; text-align: left;">
              <BR>Orden: &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
              <input id="orden" name="orden" value="{{orden}}" style="width:30px; align:center"></input>
              <BR>Nota: </BR>
              <input id="nota" value="{{nota}}"name="nota" style="width:650px; align:center"></input>
